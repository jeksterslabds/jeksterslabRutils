# fugitive
[ -d ~/.vim/pack/tpope/start/fugitive ] && rm -rf ~/.vim/pack/tpope/start/fugitive
git clone https://tpope.io/vim/fugitive.git ~/.vim/pack/tpope/start/fugitive
vim -u NONE -c "helptags ~/.vim/pack/tpope/start/fugitive/doc" -c q
# surround
[ -d ~/.vim/pack/tpope/start/surround ] && rm -rf ~/.vim/pack/tpope/start/surround
git clone https://tpope.io/vim/surround.git ~/.vim/pack/tpope/start/surround
vim -u NONE -c "helptags ~/.vim/pack/tpope/start/surround/doc" -c q
# nerdtree
[ -d ~/.vim/pack/vendor/start/nerdtree ] && rm -rf ~/.vim/pack/vendor/start/nerdtree
git clone https://github.com/preservim/nerdtree.git ~/.vim/pack/vendor/start/nerdtree
vim -u NONE -c "helptags ~/.vim/pack/vendor/start/nerdtree/doc" -c q
# solarized
[ -d vim-colors-solarized ] && rm -rf vim-colors-solarized
git clone git://github.com/altercation/vim-colors-solarized.git
[ ! -d ~/.vim/colors ] && mkdir ~/.vim/colors
mv vim-colors-solarized/colors/solarized.vim ~/.vim/colors/
[ -d vim-colors-solarized ] && rm -rf vim-colors-solarized
